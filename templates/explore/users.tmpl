{{template "base/head" .}}
<div class="explore users">
	<div class="ui container">
		<div class="ui grid">
			{{template "explore/navbar" .}}
			<div class="twelve wide column content">
				{{template "explore/search" .}}

				<div class="ui user list">
					{{range .Users}}
						<div class="item">
						  <img class="ui avatar image" src="{{.RelAvatarLink}}">
						  <div class="content">
								{{if .FullName}}
						  		<span class="header"><a href="{{.HomeLink}}">{{.FullName}}</a> <span class="explore-username">{{.Name}}</span></span>
								{{else}}
									<span class="header"><a href="{{.HomeLink}}">{{.Name}}</a></span>
								{{end}}
						    <div class="description user-explore-details">
								{{if .Location}}
									<i class="menu-icon octicon">ğŸ“</i> {{.Location}}
								{{end}}
								{{if and .Email $.IsLogged}}
									{{if .Location}}
										<span style="margin-left:10px"><i class="menu-icon octicon">ğŸ“§</i> <a href="mailto:{{.Email}}" rel="nofollow">{{.Email}}</a></span>
									{{else}}
										<i class="menu-icon octicon">ğŸ“§</i> <a href="mailto:{{.Email}}" rel="nofollow">{{.Email}}</a>
									{{end}}
								{{end}}
						    </div>
						  </div>
						</div>
					{{end}}
				</div>

				{{template "explore/page" .}}
			</div>
		</div>
	</div>
</div>
{{template "base/footer" .}}
