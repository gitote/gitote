{{template "base/head" .}}
<div class="user profile">
	<div class="ui container">
		<div class="ui grid">
			<div class="ui five wide column">
				<div class="ui card"> 
					{{if eq .LoggedUserName .Owner.Name}}
						<a class="image poping up" href="{{AppSubURL}}/user/settings/avatar" id="profile-avatar" data-content="{{.i18n.Tr "user.change_avatar"}}" data-variation="inverted tiny" data-position="bottom center">
							<img src="{{AppendAvatarSize .Owner.RelAvatarLink 290}}" title="{{.Owner.Name}}"/>
						</a>
					{{else}}
						<span class="image">
							<img src="{{AppendAvatarSize .Owner.RelAvatarLink 290}}" title="{{.Owner.Name}}"/>
						</span>
					{{end}}
					<div class="content">
						{{if .Owner.FullName}}<span class="header text center">{{.Owner.FullName}}</span>{{end}}
						<center><span class="username text center"><i style="font-size:12px" class="menu-icon octicon">ğŸ‘¨â€ğŸ’»</i> {{.Owner.Name}} <i style="font-size:12px" class="menu-icon octicon">ğŸ‘¨â€ğŸ’»</i></span><center>
					</div>
					<div class="extra content">
						<ul class="text black">
							{{if .Owner.Location}}
								<li><i class="menu-icon octicon">ğŸ“</i>{{.Owner.Location}}</li>
							{{end}}
							{{if and .Owner.Email .IsLogged}}
								<li>
									<i class="menu-icon octicon">ğŸ“§</i>
									<a href="mailto:{{.Owner.Email}}" rel="nofollow">{{.Owner.Email}}</a>
								</li>
							{{end}}
							{{if .Owner.Website}}
								<li>
									<i class="menu-icon octicon">ğŸ”—</i>
									<a target="_blank" rel="noopener noreferrer" href="{{.Owner.Website}}">{{.Owner.Website}}</a>
								</li>
							{{end}}
							<li><i class="menu-icon octicon">ğŸ•’</i>{{.i18n.Tr "user.join_on"}} {{DateFmtShort .Owner.Created}}</li>
							{{if .Owner.NumStars}}
								<li>
									<i class="menu-icon octicon">â­</i>
									{{.Owner.NumStars}} {{.i18n.Tr "user.starred"}}
								</li>
							{{end}}
							<li>
								<i class="menu-icon octicon">ğŸ¤µ</i>
								<a href="{{.Owner.HomeLink}}/followers">
									{{.Owner.NumFollowers}} {{.i18n.Tr "user.followers"}}
								</a>
								-
								<a href="{{.Owner.HomeLink}}/following">
									{{.Owner.NumFollowing}} {{.i18n.Tr "user.following"}}
								</a>
							</li>
							{{if .Orgs}}
							<li>
								{{range .Orgs}}
									<a href="{{.HomeLink}}"><img class="ui mini image poping up" src="{{.RelAvatarLink}}" data-content="{{.Name}}" data-position="top center" data-variation="tiny inverted"></a>
								{{end}}
							</li>
							{{end}}
							{{if and .IsLogged (ne .LoggedUserName .Owner.Name)}}
								<li class="follow">
									{{if .LoggedUser.IsFollowing .Owner.ID}}
										<a class="ui basic red button" href="{{.Link}}/action/unfollow?redirect_to={{$.Link}}"><i class="menu-icon octicon">ğŸ‘¦ğŸ½</i>{{.i18n.Tr "user.unfollow"}}</a>
									{{else}}
										<a class="ui basic green button" href="{{.Link}}/action/follow?redirect_to={{$.Link}}"><i class="menu-icon octicon">ğŸ‘¦</i>{{.i18n.Tr "user.follow"}}</a>
									{{end}}
								</li>
							{{end}}
						</ul>
					</div>
				</div>
			</div>
			<div class="ui eleven wide column">
				<div class="ui secondary pointing menu">
					<a class="{{if ne .TabName "activity"}}active{{end}} item" href="{{.Owner.HomeLink}}">
						<i class="menu-icon octicon">ğŸ“</i>&nbsp;{{.i18n.Tr "user.repositories"}} <span class="ui grey label">{{.Owner.NumRepos}}</span>
					</a>
					<a class="item">
						<a class="{{if eq .TabName "activity"}}active{{end}} item" href="{{.Owner.HomeLink}}?tab=activity">
							<i class="menu-icon octicon">ğŸ”Š</i>&nbsp;{{.i18n.Tr "user.activity"}}
						</a>
					</a>
				</div>

				{{if ne .TabName "activity"}}
					{{template "explore/repo_list" .}}
					{{template "explore/page" .}}
				{{else}}
					<br>
					<div class="feeds">
						{{template "user/dashboard/feeds" .}}
					</div>
				{{end}}
			</div>
		</div>
	</div>
</div>
{{template "base/footer" .}}
